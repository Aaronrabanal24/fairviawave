{
  "name": "Fairvia Wave Enhanced Development Environment",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "."
  },
  // Moved settings/extensions into customizations.vscode per schema
  "forwardPorts": [3000, 3001, 5432, 54323, 9229],
  "postCreateCommand": "bash .devcontainer/post-create.sh",
  "containerEnv": {
    "DATABASE_URL": "postgresql://postgres:postgres@postgres:5432/fairvia_test?schema=public",
    "DIRECT_URL": "postgresql://postgres:postgres@postgres:5432/fairvia_test?schema=public"
  },
  "remoteUser": "node",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "18"
    },
    // Removed built-in Postgres feature (was failing to fetch). Using docker compose defined service instead.
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/git:1": {
      "version": "latest",
      "ppa": true
    },
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "hostRequirements": {
    "cpus": 4,
    "memory": "8gb",
    "storage": "32gb"
  },
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": ["source.fixAll.eslint"],
        "typescript.tsdk": "node_modules/typescript/lib",
        "typescript.enablePromptUseWorkspaceTsdk": true,
        "prisma.showPrismaDataPlatformNotification": false,
        "typescript.preferences.importModuleSpecifier": "relative",
        "playwright.reuseBrowser": true,
        "vitest.enable": true
      },
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "ms-vscode.vscode-typescript-next",
        "bradlc.vscode-tailwindcss",
        "ms-playwright.playwright",
        "prisma.prisma",
        "supabase.supabase-vscode",
        "postgresql.pgsql",
        "cweijan.vscode-postgresql-client2",
        "github.copilot",
        "github.copilot-chat",
        "ms-toolsai.jupyter",
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-vscode.vscode-json",
        "formulahendry.auto-rename-tag",
        "christian-kohler.path-intellisense",
        "zixuanchen.vitest-explorer",
        "ms-vscode.test-adapter-converter",
        "ms-azuretools.vscode-docker",
        "mutantdino.resourcemonitor",
        "ms-vsliveshare.vsliveshare",
        "eamodio.gitlens",
        "github.vscode-github-actions",
        "redhat.vscode-yaml",
        "mikestead.dotenv",
        "yoavbls.pretty-ts-errors",
        "openai.chatgpt"
      ]
    }
  },
  "portsAttributes": {
    "3000": {
      "label": "Next.js App",
      "onAutoForward": "notify"
    },
    "3001": {
      "label": "Test Server",
      "onAutoForward": "silent"
    },
    "5432": {
      "label": "PostgreSQL",
      "onAutoForward": "silent"
    },
    "54323": {
      "label": "Supabase Local",
      "onAutoForward": "silent"
    },
    "9229": {
      "label": "Node.js Debug",
      "onAutoForward": "silent"
    }
  }
}
